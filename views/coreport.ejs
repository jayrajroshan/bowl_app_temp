    <style>
      body {
        font-family: "Nunito", sans-serif;
        background-image: linear-gradient(
            339deg,
            rgba(47, 47, 47, 0.07) 0%,
            rgba(47, 47, 47, 0.07) 42%,
            transparent 42%,
            transparent 99%,
            rgba(17, 17, 17, 0.02) 99%,
            rgba(17, 17, 17, 0.02) 100%
          ),
          linear-gradient(
            257deg,
            rgba(65, 65, 65, 0.02) 0%,
            rgba(65, 65, 65, 0.02) 11%,
            transparent 11%,
            transparent 92%,
            rgba(53, 53, 53, 0.02) 92%,
            rgba(53, 53, 53, 0.02) 100%
          ),
          linear-gradient(
            191deg,
            rgba(5, 5, 5, 0) 0%,
            rgba(5, 5, 5, 0) 1%,
            transparent 1%,
            transparent 45%,
            rgba(19, 19, 19, 0.08) 45%,
            rgba(19, 19, 19, 0.08) 100%
          ),
          linear-gradient(
            29deg,
            rgba(28, 28, 28, 0.07) 0%,
            rgba(28, 28, 28, 0.07) 33%,
            transparent 33%,
            transparent 40%,
            rgba(220, 220, 220, 0.09) 40%,
            rgba(220, 220, 220, 0.09) 100%
          ),
          linear-gradient(90deg, rgb(255, 255, 255), rgb(255, 255, 255));
      }

      table {
            border-collapse: collapse;
            
        }
        table, th, td {
            border: 1px solid rgb(117, 117, 117);
        }
        th,td {
          padding: 0px 5px;
        }

        
        .html2canvas-container { width: 3000px !important; height: 3000px !important; }
    </style>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.5.3/jspdf.min.js"></script>
    <script type="text/javascript" src="https://html2canvas.hertzen.com/dist/html2canvas.min.js"></script>
       
     
    <script>
      const vw = Math.max(document.documentElement.clientWidth || 0, window.innerWidth || 0)
      const vh = Math.max(document.documentElement.clientHeight || 0, window.innerHeight || 0)
      //const vw = window.innerWidth;
      //const vh = window.innerHeight;
      //var w = document.getElementById("linechart_material").offsetWidth;
      //var h = document.getElementById("linechart_material").offsetHeight;


      google.charts.load('current', {'packages':['line']});
      google.charts.setOnLoadCallback(drawChart);

        function drawChart() {

          var data = new google.visualization.DataTable();
          data.addColumn('number', 'Bowl');
          data.addColumn('number', 'Rotation');
          data.addColumn('number', 'Hyper Extension');
          data.addColumn('number', 'Posteriorly Rotated');

          data.addRows([<%= graph%>]);
          var options = {
            chart: {
              title: 'Overview of bowling',
            },
            legend: { position: 'top' },
            width:  (vw*8)/10,
            height: (vh*4)/10
            // width:  w,
            // height: h
          };

          var chart = new google.charts.Line(document.getElementById('linechart_material'));

          chart.draw(data, google.charts.Line.convertOptions(options));
        }
    </script>
    <!-- <script src="/public/assets/speed-data.js"></script> -->
  </head>

  <body>
